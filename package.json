{
  "name": "animatable-properties",
  "version": "2.1.0",
  "description": "Animatable CSS properties for use with Web Animations API, JavaScript and CSS",
  "main": "src/index.js",
  "author": "Ilya Apasov",
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/apasov/animatable-properties#readme",
  "unpkg": "dist/animatable.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apasov/animatable-properties.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "gen": "node generate.js",
    "fix": "yarn gen && yarn fix:eslint && yarn fix:prettier && yarn build",
    "fix:eslint": "eslint --fix \"**/*.*\"",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.*\"",
    "lint:prettier": "prettier --check \"**/*.*\"",
    "test": "yarn fix && yarn jest",
    "up": "yarn upgrade-interactive && yarn outdated"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-jest": "^25.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-html": "^6.0.1",
    "eslint-plugin-json": "^2.1.1",
    "jest": "^25.3.0",
    "mdn-data": "^2.0.8",
    "prettier": "^2.0.4",
    "rollup": "^2.4.0",
    "rollup-plugin-terser": "^5.3.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "html",
      "json"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:json/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "printWidth": 280,
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "waapi",
    "web",
    "animations",
    "api",
    "web-animations-api",
    "css",
    "transitions"
  ]
}
