{
  "name": "animatable-properties",
  "version": "3.0.13",
  "description": "Animatable CSS properties for use with Web Animations API, JavaScript and CSS",
  "main": "src/index.js",
  "author": "Ilya Apasov",
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/apasov/animatable-properties#readme",
  "unpkg": "dist/animatable.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apasov/animatable-properties.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "yarn fix && rollup -c",
    "c": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "watch": "yarn fix && rollup -cw",
    "gen": "node generate.js",
    "fix": "yarn gen && yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --fix \"**/*.*\"",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.*\"",
    "lint:prettier": "prettier --check \"**/*.*\"",
    "test": "yarn fix && jest && rollup -c",
    "up": "yarn upgrade-interactive && ncu -i && yarn"
  },
  "dependencies": {
    "css-tree-animatable": "^1.0.16",
    "lodash.isnumber": "^3.0.3",
    "lodash.isplainobject": "^4.0.6",
    "lodash.isstring": "^4.0.1",
    "mdn-data-animatable": "^1.1.16"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "babel-jest": "^27.4.5",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-json": "^3.1.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "rollup": "^2.61.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "html",
      "json"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:json/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "printWidth": 280,
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "waapi",
    "web",
    "animations",
    "api",
    "web-animations-api",
    "css",
    "transitions"
  ]
}
